{
  "name": "soulmedicine",
  "scripts": {
    "postdeploy": "rake postdeploy"
  },
  "env": {
    "CONTENT_PREVIEW_MODE": {
      "required": true
    },
    "ENABLED_LOCALES": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "STORYBLOK_TOKEN": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "papertrail:choklad"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
