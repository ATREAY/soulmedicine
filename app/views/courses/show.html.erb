<h1>
  <%= t('concepts.course').titleize %>:
  <%= @course.name %>
</h1>

<div>
  <%= @course.description.html_safe %>
</div>

<div>
  <h2><%= t('concepts.lesson').pluralize.titleize %></h2>
  <ol>
    <% @course.lessons.each do |l| %>
      <li>
        <%= link_to l.name, course_lesson_path(@course, l) %>
      </li>
    <% end %>
  </ol>
</div>
