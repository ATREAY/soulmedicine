<div class="card shadow-sm mb-3 course-card <%= text_direction %>" dir="<%= text_direction %>">
  <%=
    image_tag course.image,
      class: 'card-img-top',
      alt: course.summary
  %>
  <div class="card-body">
    <h5 class="card-title">
      <%= link_to tc(course.name), course_path(course) %>
    </h5>
    <h6 class="card-subtitle mb-2">
      <% course.enabled_languages.each do |l| %>
        <%= link_to LocalesService.language_name(l), course_path(course, locale: l), class: 'badge badge-primary' %>
      <% end %>
    </h6>
    <div class="card-text">
      <%= tc(course.summary) %>
    </div>
  </div>
</div>
